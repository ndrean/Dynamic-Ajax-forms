document.getElementById('form_Resto').innerHTML = ""
document.getElementById('form_Resto').insertAdjacentHTML(
  'afterbegin',`<%= j render 'restos/form', resto: @resto %>`
)
document.getElementById("addComment").onclick = dynAddComment();


function dynAddComment() {
  const createCommentButton = document.getElementById("addComment");
  createCommentButton.addEventListener("click", (e) => {
    e.preventDefault();
    const lastId = document
                    .querySelector('#select')
                    .lastElementChild
                    .dataset.fieldsId
    const newId = parseInt(lastId, 10) + 1;
    const changeFieldsetId = document
        .querySelector('[data-fields-id="0"]')
        .outerHTML
        .replace(/0/g,newId)
    document.querySelector("#select").insertAdjacentHTML(
      "beforeend", changeFieldsetId 
    );
  });
}

