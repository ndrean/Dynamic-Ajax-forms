

<div class="container w-70%">
<h1>Restaurants</h1>
  <table class="table table-dark">
    <thead>
      <tr>
        <th>Name</th>
        <th>Create comment</th>
        <th>Restaurant details</th>
        <th>Delete Restaurant</th>
        
      </tr>
    </thead>

    <tbody>
      <% @restos.each do |resto| %>
        <%= render 'restos/trow', resto: resto %>
      <% end %>
    </tbody>
  </table>
  <br>
  <p>
    <%= link_to 'Dynamic form', 'nests/new', data: {turbolinks: false}, class:"btn btn-primary", style:"font-size:18px; color: white;" %>
  </p>
  <p>
    <%= link_to 'New Restaurant / AJAX', 'restos/new', remote: true, id:"new_resto", class:"btn btn-success", style:" color:white;" %>

  </p>
  <div class="row">
    <div id="new_Comment" class="border col-md-8"></div>
    <div id="new_Resto" class="border col-md-4"></div>
  </div>
</div>



<p>
    <%= link_to 'Go to comments list', comments_path, class:"action"%>
</p>
