<div class="container">
<h2>
    <%= link_to  root_path, class:"btn btn-info", style:"font-size:12px; color: white;" do %>
        <i class="fas fa-home"></i>
    <% end %>
</h2>

    <div class="row">
        <div class="col-md-6">
            <table>
                <thead>
                    <tr>
                        <td>Genre</td>
                        <td>Restaurants</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                <% @genres.each do |genre| %>
                
                    <tr>
                        <td><%= genre.name %></td>
                        <td>
                        <% genre.restos.each do |r| %>
                            <%=r.name %> &nbsp
                            <% end %>
                        </td>
                        <td>TODO</td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-3">
            <h3>Select a restaurant and assign it a 'Genre'</h3>
            <%= simple_form_for @resto, url: 'create', method: :post do |f|  %>
                <%= f.input :name, collection: @restos %>
                <%= f.input :genre_id, collection: @genres%>
            <%= f.button :submit %>
            <% end %>
        </div>
                <%#= simple_form_for :q, url: 'set_genres_to_resto' do |f| %>
                    <%#= render 'shared/errors', myvar: :set_genre %>
                    <%#= f.input :list_names, collection: @restos,  input_html: { multiple: true } %> 
                    <%#= f.simple_fields_for :genre do |ff| %>
                        <%#= ff.input :genre_id, as: :radio_buttons, collection: @genres %>
                    <%# end %>
                    <%#= f.button :submit %>
                <%# end %>
        <div class="col-md-2">
            <h3>Create a new Genre on the fly</h3>
            <%= simple_form_for @genre, url: 'create' do |f| %>
                <%= render 'shared/errors', myvar: @genre %>
                <%= f.input :name %>
                <%= f.button :submit, "Create", class:"btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>